#!/usr/bin/env bash

# Resume Generator CLI Wrapper
# This script builds the TypeScript project and runs the CLI

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Check if Node.js is available
if ! command -v node &> /dev/null; then
    echo "Error: Node.js is required but not installed."
    exit 1
fi

# Check if npm is available
if ! command -v npm &> /dev/null; then
    echo "Error: npm is required but not installed."
    exit 1
fi

# Install dependencies if node_modules doesn't exist
if [ ! -d "node_modules" ]; then
    echo "Installing dependencies..."
    npm install
fi

# Build TypeScript if dist doesn't exist or is older than source files
if [ ! -d "dist" ] || [ "$(find . -name "*.ts" -newer dist 2>/dev/null)" ]; then
    echo "Building TypeScript..."
    npm run build
fi

# Run the CLI with all passed arguments
node dist/cli.js "$@"